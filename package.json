{
  "name": "@foursquare/pilgrim-sdk-react-native",
  "homepage": "https://enterprise.foursquare.com/products/pilgrim",
  "version": "1.2.0",
  "description": "React native wrapper for the Pilgrim SDK",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "react-native"
  ],
  "author": "Brian Rojas",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/foursquare/pilgrim-sdk-react-native.git"
  },
  "devDependencies": {
    "@react-native-community/eslint-config": "^3.0.2",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react-native": "^4.0.0",
    "prettier": "^2.0.5",
    "typescript": "^4.5.2"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false,
          "semi": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "semi": false
  }
}
